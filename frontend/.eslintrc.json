{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": false,
        "es6": true,
        "jquery": false,
        "node": false
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "rules": {
        "no-shadow": "warn",
        "semi": "warn",
        "semi-spacing": "warn",
        "comma-dangle": "warn",
        "eol-last": "warn",
        "valid-typeof": ["error", { "requireStringLiterals": true }]
    },
    "plugins": ["html"],
    "settings": {
        "html/indent": "+4",
        "html/report-bad-indent": "error"
    }
}
